<% form_for(@peripheral) do |f| %>

<table class="axial">

	<tr>
		<th></th>
		<td><h3>Edit Printers / Fax / Scanners</h3></td>
	</tr>
    <tr>
      <th> Type</th>
	  <td> 
		<%= f.select(:ptype, options_for_select(@peripheral_types, @peripheral.ptype)) %>
	  </td>
	</tr>
    <tr>
      <th> Brand</th>
	  <td> 
		<%= f.select(:brand, options_for_select(@peripheral_brands, @peripheral.brand)) %> 
	  </td>
	</tr>
	<tr>
    <th>Serial</th>
    	<td><%= f.text_field(:serial, :size => 35 ) %></td>
    </tr>

  <tr>
    <th>Hard Drive Serial</th>
    <td>
		<%= text_field_tag('peripheral_hard_drive_serial', @peripheral.peripherals_hard_drive_serials.collect(&:name).join(","), :size => 35 ) %>
		<cite>Use comma to separate multiple Serial Numbers</cite>
	</td>
  </tr>
  	

</table>

<div class="functnbar3">
  <%= submit_tag "Update" %>
</div>

<% end %>