<% @page_title = 'Services' -%>

<% if solution_owner_user? -%>
  <%= print_tasks do |t|
    t << link_to("New Service", new_service_path)
    t
  end %>
<% end -%>

<h3>Monitors</h3>

<table width="100%">
  <tr>
    <th>Type</th>
    <th>Size</th>
    <th>Brand</th>
    <th>Serial</th>
  </tr>
  <% for monitor in @monitors %>
    <tr class="<%= cycle 'a', 'b' %>">
      <td><%= monitor.cm_type %></td>
      <td><%= monitor.size %></td>
      <td><%= monitor.brand %></td>
      <td><%= monitor.serial %></td>
    </tr>
  <% end %>
</table>


<h3>CPUs</h3>

<table width="100%">
  <tr>
    <th>Type</th>
    <th>Brand</th>
    <th>Serial</th>
    <th>Class</th>
    <th>Hard Drive Serial</th>
  </tr>
  <% for cpu in @cpus %>
    <tr class="<%= cycle 'a', 'b' %>">
      <td><%= cpu.cpu_type %></td>
      <td><%= cpu.brand %></td>
      <td><%= cpu.serial %></td>
      <td><%= cpu.cpu_class %></td>
      <td><%= cpu.cpu_hard_drive_serials.collect(&:name).join(",") %></td>
    </tr>
  <% end %>
</table>


