<% @page_title = 'Password Ticket' -%>
<% @user.password = @user.password_confirmation = nil -%>
<p><%= image_tag 'logo.png' %></p>

<p>Welcome <%= @user.name %>. Please update your user information before we log you in.</p>

<%= error_messages_for :user %>
<% form_for :user, @user do |f| %>
  <table class="axial">
    <table class="axial">
    <tr>
      <th><%= f.label :login %></th>
      <td><%= f.text_field :login %></td>
    </tr>
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :email %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :title %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :phone %></th>
      <td><%= f.text_field :phone %></td>
    </tr>
    <tr>
      <th><%= f.label :time_zone %></th>
      <td><%= f.time_zone_select :time_zone, TZInfo::Timezone.us_zones, :include_blank => true %></td>
    </tr>
    <tr>
      <th><%= f.label :password %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation %></th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>
  <div class="functnbar3">
    <%= submit_tag 'Submit' %>
  </div>
<% end %>