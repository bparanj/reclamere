<% @page_title = 'User' %>

<%= print_tasks do |t|
  t << link_to('Edit User', edit_admin_user_path(@user))
  t
end %>

<h3>User</h3>
<table class="axial">
  <tr>
    <th>Company</th>
    <td><%= @user.is_a?(SolutionOwnerUser) ? SOLUTION_OWNER : @user.client.name %></td>
  </tr>
  <tr>
    <th>Login</th>
    <td><%=h @user.login %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%=h @user.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%=h @user.email %></td>
  </tr>  
  <tr>
    <th>Title</th>
    <td><%=h @user.title %></td>
  </tr>
  <tr>
    <th>Phone</th>
    <td><%=h @user.phone %></td>
  </tr>
  <tr>
    <th>Time Zone</th>
    <td><%=h @user.time_zone ? @user.time_zone : Time.zone.name %></td>
  </tr>
  <tr>
    <th>Admin</th>
    <td><%= @user.admin? ? 'Yes' : 'No' %></td>
  </tr>
  <tr>
    <th>Inactive</th>
    <td><%= @user.inactive? ? 'Yes' : 'No' %></td>
  </tr>
  <tr>
    <th>Last Login</th>
    <td><%= @user.last_login ? print_datetime(@user.last_login) : 'Never' %></td>
  </tr>
  <tr>
    <th>Created At</th>
    <td><%= print_datetime @user.created_at %></td>
  </tr>
</table>
<div class="functnbar3">&nbsp;</div>

<p><%= link_to 'User List', admin_users_path %></p>
